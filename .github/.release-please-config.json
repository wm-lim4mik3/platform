{
  "release-type": "node",
  "packages": {
    ".": {
      "package-name": "financing-platform",
      "version-file": "package.json",
      "changelog-path": "CHANGELOG.md"
    }
  },
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "prerelease": true,
  "tag-separator": "-rc",
  "pull-request-title-pattern": "chore: releasing a new version: ${version}",
  "versioning": "default",
  "include-v-in-tag": true,
  "github-release": true
}